<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "com.trendmobile.guiatermas"
        versionCode="10" 
        version   = "1.0.0">

    <!-- versionCode is optional and Android only -->

    <name>Guía de Termas APP</name>

    <description>
        Guía virtual de Las Termas de Río Hondo. 
    </description>

    <author href="http://www.trendtech.com.ar/grid-portfolio/guia-termas-app/" email="soporte@trendtech.com.ar">
        Trendtech 
    </author>
	
	<preference name="orientation" value="portrait" />
	
	<preference name="fullscreen" value="true" />
	
	<preference name="show-splash-screen-spinner" value="false" />
	
	<preference name="splash-screen-duration" value="6000" />
	
	<!-- Icons -->

	<icon src="icons/android/icono.png" />
	
	<!-- Splash Screens -->
	<gap:splash src="splash/android/ldpi.png" gap:platform="android" gap:density="ldpi" />
	<gap:splash src="splash/android/mdpi.png" gap:platform="android" gap:density="mdpi" />
	<gap:splash src="splash/android/hdpi.png" gap:platform="android" gap:density="hdpi" />

</widget>